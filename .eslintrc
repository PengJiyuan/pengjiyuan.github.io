{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "comma-spacing": [
            "error",
            { "before": false, "after": true }
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "no-empty": [
            "error"
        ],
        "no-console": [
            "error", 
            { 
                "allow": ["log", "error", "warn"]
            }
        ],
        "no-alert": [
            "error"
        ]
    }
}